---
import { Icon } from "astro-icon/components";
---

<footer>
  <hr />

  <div class="footer-container">
    <p>Powered by caffeine üçµ</p>

    <div class="icon-container">
      <a href="/rss.xml" aria-label="RSS">
        <Icon name="rss" width={20} height={20} />
      </a>
      <a href="mailto:contact@ezaz.dev" aria-label="Mail">
        <Icon name="mail" width={20} height={20} />
      </a>
      <a
        href="https://github.com/ezaz-ahmed"
        target="_blank"
        aria-label="Github"
      >
        <Icon name="github" width={20} height={20} />
      </a>
      <a
        href="https://www.linkedin.com/in/ezaz7"
        target="_blank"
        aria-label="Linkedin"
      >
        <Icon name="linkedin" width={20} height={20} />
      </a>
      <a
        href="https://twitter.com/EzazDev"
        target="_blank"
        aria-label="Twitter"
      >
        <Icon name="twitter" width={20} height={20} />
      </a>
    </div>
  </div>
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  hr {
    width: 100%;
    border: none;
    background-color: var(--light-blue);
    height: 4px;
    margin: 2rem 0;
  }

  p {
    text-indent: 0;
  }

  .footer-container {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .icon-container {
    display: flex;
    gap: 1rem;
  }

  .icon-container a {
    color: var(--light-pastel);
  }

  small a {
    color: #2b81dc;
    text-decoration: 2px solid;
  }

  .social-icons {
    margin-top: 1rem;
    display: flex;
    gap: 1rem;
  }

  .social-icons img {
    width: 100%;
    height: auto;
    margin: 0.4em;
  }
</style>
