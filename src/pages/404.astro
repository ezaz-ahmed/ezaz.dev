---
import { Image } from "astro:assets";
import error from "@assets/notfound.webp";
import Layout from "@layouts/Layout.astro";

const pageTitle = "Not Found | Ezaz Ahmed";
---

<Layout pageTitle={pageTitle}>
  <div class="gif">
    <Image
      src={error}
      width="300"
      height="259"
      alt="Gif collceted from https://giphy.com/iroiro1/"
      class="error-image"
    />
  </div>
  <div class="container">
    <h2>404</h2>
    <h1>What are you searching for?</h1>
    <p>
      Oops! The page you are looking for might be under construction or does not
      exist.
    </p>

    <div class="button">
      <a href="/" class="back-to-home-button"> <button>Back to Home</button></a>
    </div>
  </div>
</Layout>
