---
import { Image } from "@unpic/astro";
import Tags from "./Tags.astro";

type Props = {
  href: string;
  image: string;
  title: string;
  tags: string[];
};

const { href, image, title, tags } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    <Image
      width={400}
      height={400}
      src={image}
      class="card-img"
      alt="ProjectImage"
      fetchpriority="low"
      sizes="auto"
    />
    <h3 class="card-title">
      {title}
    </h3>
  </a>

  <Tags tags={tags} />
</li>

<style>
  .link-card {
    list-style: none;
    display: flex;
    flex-direction: column;
    background-size: 400%;
    padding: 20px;
    transition: transform 0.3s ease;

    a {
      width: 100%;
      text-decoration: none;
      line-height: 1.4;
      border-radius: 8px;
      color: #fdebf3;
      text-align: center;

      img {
        border-radius: 16px;
      }

      h3 {
        margin: 0;
        font-family: var(--sans-serif-font);
        font-size: 1.5rem;
        font-weight: normal;
        text-align: center;
      }
    }
  }

  .link-card:hover {
    transform: scale(1.05);
  }
</style>
