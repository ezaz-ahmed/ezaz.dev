---
import "@styles/global.css";
import Header from "@components/Header.astro";
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="A seasoned software developer with 3+ years of expertise in MERN, Next.js, Nest.js, and more"
    />

    <meta
      name="keywords"
      content="MERN stack developer, Next.js expert, Nest.js specialist, Web application developer, JavaScript coding, Full-stack development, React.js proficiency, Node.js expertise, Software engineering portfolio, Innovative coding solutions, UI/UX design, Responsive web development, MongoDB integration, Server-side rendering, Progressive web applications (PWAs)"
    />

    <meta name="generator" content={Astro.generator} />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />

    <title>{pageTitle}</title>
  </head>

  <script is:inline>
    const getThemePreference = () => {
      if (
        typeof localStorage !== "undefined" &&
        localStorage.getItem("theme")
      ) {
        return localStorage.getItem("theme");
      }
      return window.matchMedia("(prefers-color-scheme: dark)").matches
        ? "dark"
        : "light";
    };
    const isDark = getThemePreference() === "dark";
    document.documentElement.classList[isDark ? "add" : "remove"]("dark");

    if (typeof localStorage !== "undefined") {
      const observer = new MutationObserver(() => {
        const isDark = document.documentElement.classList.contains("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");
      });
      observer.observe(document.documentElement, {
        attributes: true,
        attributeFilter: ["class"],
      });
    }
  </script>
  <body>
    <Header />
    <slot />
  </body>
</html>
