---
import { Image } from "@unpic/astro";
type Props = {
  href: string;
  image: string;
  title: string;
  body: string;
};

const { href, image, title, body } = Astro.props;
---

<li class="project-card">
  <a href={href} target="_blank">
    <div class="img">
      <Image
        width={400}
        height={260}
        src={image}
        class="card-img"
        alt="ProjectImage"
      />
      <h3>
        {title}
      </h3>
      <p>
        {body}
      </p>
    </div>
  </a>
</li>

<style>
  .project-card {
    list-style: none;
    display: flex;
    padding: 20px;
    transition: transform 0.3s ease;
  }

  .project-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    border-radius: 8px;
    color: #fdebf3;
    text-align: left;

    .img {
      text-align: center;

      img {
        border-radius: 16px;
      }

      h3 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 900;
      }

      p {
        font-size: 1em;
        line-height: 1.5;
        text-indent: 0;
        margin: 0.5rem 0;
      }
    }
  }

  .project-card:hover {
    transform: scale(1.05);
  }
</style>
